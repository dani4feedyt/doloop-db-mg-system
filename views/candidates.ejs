<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/css/style.css">
    <title>All Candidates</title>
</head>
<body>
    <nav class="editable-table-nav">
        <h1>All Candidates</h1>
        <div class="navigation-buttons">
            <a href="/bio/new">
                <button type="button">Add New Candidate</button>
            </a>
        </div>
    </nav>

    <form method="GET" action="/candidates" class="search-form">
        <input 
            type="text" 
            name="search" 
            placeholder="Search query" 
            value="<%= searchValue %>" 
        />
        <button type="submit">Search</button>
    </form>

    <div class="candidates-list">
        <% users.forEach(user => { %>
            <div class="candidate-card">
                <p><strong><%= user.name %> <%= user.surname %></strong></p>
                <p>Age: <%= user.age %></p>
                <p>Location: <%= user.location %></p>
                <div class="links">
                    <a href="/bio/<%= user.u_id %>">Biography</a> | 
                    <a href="/job/<%= user.u_id %>">Job Card</a>
                </div>
            </div>
        <% }); %>
    </div>
</body>
</html>